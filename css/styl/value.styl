.value
	display: inline-block
	padding: 5px 10px
	margin: 0 3px
	background: #EEFFEE
	border-radius: 3px
	box-shadow: inset 0 0 5px rgba(0, 0, 0, .5)
	box-sizing: border-box
	cursor: pointer

	&:hover
		background: #DDFFDD
		box-shadow: inset 0 0 7px rgba(0, 0, 0, .5)

	&_unchecked
		background: #FFF
		box-shadow: inset 0 0 1px rgba(0, 0, 0, .5)

		&:hover
			background: #EEE
			box-shadow: inset 0 0 1px rgba(0, 0, 0, .5)
